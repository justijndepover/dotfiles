#! /bin/sh

[ "$(stat -f "%Sm" -t %Y%m%d /tmp/corona 2>/dev/null)" != "$(date "+%Y%m%d")" ] && curl -s https://corona-stats.online/belgium > /tmp/corona

grep "Belgium" /tmp/corona | 
    sed "s/[[:space:]]//g ; s/â•‘//g ; s/â”‚/;/g" |
    awk -F ';' '{print "ðŸ˜·  " $3 " (" $4 ") ðŸ’€  " $5 " (" $6 ")"}'

