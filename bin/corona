#! /bin/sh

if [[ "$(stat -f "%Sm" -t %Y%m%d /tmp/corona 2>/dev/null)" != "$(date "+%Y%m%d")" ]] || [[ $1 == "-r" ]]
then
    curl -s https://corona-stats.online/belgium > /tmp/corona
fi

grep "Belgium" /tmp/corona |
    sed "s/[[:space:]]//g ; s/â•‘//g ; s/â”‚/;/g" |
    awk -F ';' '{print "ðŸ˜·  " $3 " (" $4 ") ðŸ’€  " $5 " (" $6 ")"}'
